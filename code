from telegram import Update, WebAppInfo, ReplyKeyboardMarkup, KeyboardButton
from telegram.ext import Application, CommandHandler, MessageHandler, ContextTypes, filters
import json, html, logging

logging.basicConfig(level=logging.INFO)

# üëá —Å—é–¥–∞ —Å—Ç–∞–≤–∏—à—å —Å—Å—ã–ª–∫—É –Ω–∞ —Å–≤–æ–π —Å—Ç–∞—Ç–∏—á–µ—Å–∫–∏–π —Ö–æ—Å—Ç–∏–Ω–≥ (–≥–¥–µ –ª–µ–∂–∏—Ç —ç—Ç–æ—Ç html)
WEBAPP_URL = "https://–¢–í–û–ô-–î–û–ú–ï–ù/–¢–í–û–ô-–§–ê–ô–õ.html"

async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    # –∫–Ω–æ–ø–∫–∞, –∫–æ—Ç–æ—Ä–∞—è –æ—Ç–∫—Ä–æ–µ—Ç —Ç–≤–æ–π html –ø—Ä—è–º–æ –≤ Telegram
    kb = [[KeyboardButton(text="üß™ –û—Ç–∫—Ä—ã—Ç—å –∞–Ω–∞–ª–∏–∑–∞—Ç–æ—Ä", web_app=WebAppInfo(url=WEBAPP_URL))]]
    await update.message.reply_text(
        "–ñ–º–∏ –∫–Ω–æ–ø–∫—É, –∑–∞–ø–æ–ª–Ω–∏ –∏ –Ω–∞–∂–º–∏ ¬´–û—Ç–ø—Ä–∞–≤–∏—Ç—å –≤ —á–∞—Ç¬ª üëá",
        reply_markup=ReplyKeyboardMarkup(kb, resize_keyboard=True)
    )

async def handle_web_app_data(update: Update, context: ContextTypes.DEFAULT_TYPE):
    try:
        data = json.loads(update.message.web_app_data.data)

        text = (
            "üß™ <b>–†–µ–∑—É–ª—å—Ç–∞—Ç—ã –∞–Ω–∞–ª–∏–∑–∞</b>\n\n"
            f"üìä <b>–¢–∏–ø –∞–Ω–∞–ª–∏–∑–∞:</b> {html.escape(data.get('type', '–ù–µ —É–∫–∞–∑–∞–Ω'))}\n"
            f"üìÖ <b>–í—Ä–µ–º—è –∞–Ω–∞–ª–∏–∑–∞:</b> {html.escape(data.get('timestamp', '–ù–µ —É–∫–∞–∑–∞–Ω–æ'))}\n\n"
        )

        for r in data.get("results", []):
            icon = "‚úÖ" if r.get("status") == "normal" else "‚ö†Ô∏è"
            text += (
                f"{icon} <b>{html.escape(r.get('parameter',''))}:</b> {html.escape(r.get('value',''))}\n"
                f"{html.escape(r.get('explanation',''))}\n\n"
            )

        # –æ—Ç–ø—Ä–∞–≤–ª—è–µ–º –æ–±—Ä–∞—Ç–Ω–æ –≤ —ç—Ç–æ—Ç –∂–µ —á–∞—Ç (—Å–∞–º—ã–π –ø—Ä–æ—Å—Ç–æ–π –≤–∞—Ä–∏–∞–Ω—Ç)
        await context.bot.send_message(
            chat_id=update.effective_chat.id,
            text=text,
            parse_mode="HTML"
        )

    except Exception as e:
        logging.exception(e)
        await update.message.reply_text("‚ùå –û—à–∏–±–∫–∞ –ø—Ä–∏ –æ–±—Ä–∞–±–æ—Ç–∫–µ –¥–∞–Ω–Ω—ã—Ö")

def main():
    app = Application.builder().token("–¢–û–ö–ï–ù_–¢–í–û–ï–ì–û_–ë–û–¢–ê").build()
    app.add_handler(CommandHandler("start", start))
    app.add_handler(MessageHandler(filters.StatusUpdate.WEB_APP_DATA, handle_web_app_data))
    app.run_polling()

if __name__ == "__main__":
    main()
