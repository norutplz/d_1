  from telegram import Update
from telegram.ext import Application, CommandHandler, ContextTypes, MessageHandler, filters
import json
import html
import logging

logging.basicConfig(
    format='%(asctime)s - %(name)s - %(levelname)s - %(message)s', level=logging.INFO
)

async def handle_web_app_data(update: Update, context: ContextTypes.DEFAULT_TYPE):
    try:
        data = json.loads(update.message.web_app_data.data)

        message_text = f"üß™ <b>–†–µ–∑—É–ª—å—Ç–∞—Ç—ã –∞–Ω–∞–ª–∏–∑–∞</b>\n\n"
        message_text += f"üìä <b>–¢–∏–ø –∞–Ω–∞–ª–∏–∑–∞:</b> {html.escape(data.get('type', '–ù–µ —É–∫–∞–∑–∞–Ω'))}\n"
        message_text += f"üìÖ <b>–í—Ä–µ–º—è –∞–Ω–∞–ª–∏–∑–∞:</b> {html.escape(data.get('timestamp', '–ù–µ —É–∫–∞–∑–∞–Ω–æ'))}\n\n"

        for result in data.get('results', []):
            status_icon = "‚úÖ" if result.get('status') == 'normal' else "‚ö†Ô∏è" if result.get('status') == 'warning' else "‚ùå"
            message_text += (
                f"{status_icon} <b>{html.escape(result.get('parameter', ''))}:</b> "
                f"{html.escape(result.get('value', ''))}\n"
                f"{html.escape(result.get('explanation', ''))}\n\n"
            )

        # üëá –æ—Ç–ø—Ä–∞–≤–ª—è–µ–º —Ç—É–¥–∞ –∂–µ, –æ—Ç–∫—É–¥–∞ –ø—Ä–∏–ª–µ—Ç–µ–ª–∏ –¥–∞–Ω–Ω—ã–µ
        chat_id = update.effective_chat.id
        await context.bot.send_message(chat_id=chat_id, text=message_text, parse_mode='HTML')

    except Exception as e:
        logging.error(f"–û—à–∏–±–∫–∞ –æ–±—Ä–∞–±–æ—Ç–∫–∏ –¥–∞–Ω–Ω—ã—Ö: {e}")
        await update.message.reply_text("‚ùå –ü—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞ –ø—Ä–∏ –æ–±—Ä–∞–±–æ—Ç–∫–µ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–æ–≤")

async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    await update.message.reply_text("–û—Ç–ø—Ä–∞–≤—å –¥–∞–Ω–Ω—ã–µ –∏–∑ Mini App, —è –∏—Ö –æ—Ñ–æ—Ä–º–ª—é üëå")

def main():
    application = Application.builder().token("–í–ê–®_–¢–û–ö–ï–ù_–ë–û–¢–ê").build()

    application.add_handler(CommandHandler("start", start))
    application.add_handler(MessageHandler(filters.StatusUpdate.WEB_APP_DATA, handle_web_app_data))

    application.run_polling()

if __name__ == '__main__':
    main()
